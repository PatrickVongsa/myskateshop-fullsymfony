{% extends 'base.html.twig' %}

{% block title %}
	{{ parent()}}
	- Administration
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h1 class="text-primary my-5">Administration</h1>
			</div>
			<div class="col-12 mb-5">
				<h4 class="text-primary my-2">Tableau de bord</h4>
				<div class="row row-cols-4">
					<div class="card col">
						<a class="text-decoration-none" href="{{ path('order_index') }}">
							<img src="..." class="card-img-top" alt="...">
							<div class="card-body">
								<h5 class="card-title">Commandes</h5>
								<p class="card-text">{{ orders|length}}</p>
							</div>
						</a>
					</div>
					<div class="card col">
						<a class="text-decoration-none" href="{{ path('category_index') }}">
							<img src="..." class="card-img-top" alt="...">
							<div class="card-body">
								<h5 class="card-title">Catégories</h5>
								<p class="card-text">{{ categories|length}}</p>
							</div>
						</a>
					</div>
					<div class="card col">
						<a class="text-decoration-none" href="{{ path('product_index') }}">
							<img src="..." class="card-img-top" alt="...">
							<div class="card-body">
								<h5 class="card-title">Produits</h5>
								<p class="card-text">{{ products|length}}</p>
							</div>
						</a>
					</div>
					<div class="card col">
						<a class="text-decoration-none" href="{{ path('user_index') }}">
							<img src="..." class="card-img-top" alt="...">
							<div class="card-body">
								<h5 class="card-title">Utilisateurs</h5>
								<p class="card-text">{{ users|length}}</p>
							</div>
						</a>
					</div>
				</div>
			</div>
			<div class="col-12 mb-5">
				<h4 class="text-primary my-2">Commandes à traiter</h4>
				<div class="accordion mb-5" id="accordionExample">
					{% for order in orders %}
						{% if loop.first %}
							<div class="accordion-item">
								<h2 class="accordion-header" id="{{'heading' ~ order.id}}">
									<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="{{'#collapse' ~ order.id}}" aria-expanded="true" aria-controls="collapseOne">
										Commande référence :
										{{order.reference}}
										({{order.state}})
									</button>
								</h2>
								<div id="{{'collapse' ~ order.id}}" class="accordion-collapse collapse show" aria-labelledby="{{'heading' ~ order.id}}" data-bs-parent="#accordionExample">
									<div class="accordion-body">
										<table class="table">
											<tbody>
												{% for orderDetail in order.orderDetails %}
													<tr>
														<td>
															<strong>{{orderDetail.product.name}}</strong>
														</td>
														<td>{{orderDetail.quantity}}</td>
														<td>{{orderDetail.price|number_format(2, '.', ',') }}
															€</td>
													</tr>
												{% endfor %}
											</tbody>
											<tfoot class="mb-0">
												<tr>
													<th colspan="2" class="text-end">Total de la commande :
													</th>
													<th scope="col">{{order.total|number_format(2, '.', ',') }}
														€</th>
												</tr>
											</tfoot>
										</table>
										<div>
											<a class="btn btn-success" href="{{ path('order_edit', {'id': order.id}) }}">Faire évoluer le status</a>
										</div>
									</div>
								</div>
							</div>
						{% else %}
							<div class="accordion-item">
								<h2 class="accordion-header" id="{{'heading' ~ order.id}}">
									<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="{{'#collapse' ~ order.id}}" aria-expanded="false" aria-controls="collapseTwo">
										Commande référence :
										{{order.reference}}
										({{order.state}})
									</button>
								</h2>
								<div id="{{'collapse' ~ order.id}}" class="accordion-collapse collapse" aria-labelledby="{{'heading' ~ order.id}}" data-bs-parent="#accordionExample">
									<div class="accordion-body">
										<table class="table">
											<tbody>
												{% for orderDetail in order.orderDetails %}
													<tr>
														<td>
															<strong>{{orderDetail.product.name}}</strong>
														</td>
														<td>{{orderDetail.quantity}}</td>
														<td>{{orderDetail.price|number_format(2, '.', ',') }}
															€</td>
													</tr>
												{% endfor %}
											</tbody>
											<tfoot class="mb-0">
												<tr>
													<th colspan="2" class="text-end">Total de la commande :
													</th>
													<th scope="col">{{order.total|number_format(2, '.', ',') }}
														€</th>
												</tr>
											</tfoot>
										</table>
										<div>
											<a class="btn btn-success" href="{{ path('order_edit', {'id': order.id}) }}">Faire évoluer le status</a>
										</div>
									</div>
								</div>
							</div>
						{% endif %}
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
