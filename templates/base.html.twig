<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}MySkateshop
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

	</head>
	<body>
		{% set route_name = app.request.attributes.get('_route') %}

		{% if route_name == 'app_home' %}
			{% include "components/_header.html.twig" %}
		{% else %}
			{{ render(controller('App\\Controller\\NavbarController::generateNavbar', {'bg': true} )) }}
		{% endif %}

		{% block body %}{% endblock %}

		{{ render(controller('App\\Controller\\FooterController::generateFooter')) }}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</body>
</html>
