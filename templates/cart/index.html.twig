{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Panier
{% endblock %}

{% block body %}
	<div class="container content-container">
		<div class="row">
			<div class="col-12">
				<h1 class="text-primary my-5">Mon panier</h1>
			</div>
			<div class="row justify-content-center">
				<div class="col d-flex flex-wrap flex-column justify-content-start">
					{% for product in dataCart %}
						{% include "components/_cart-product-show.html.twig" %}
					{% else %}
						<div class="card" style="max-width: 540px;">
							<div class="card-body">
								Votre panier est vide.
							</div>
						</div>
					{% endfor %}
				</div>
				<div class="col">
					<div class="card text-center">
						<div class="card-header">
							Informations du panier
						</div>
						<div class="card-body">
							<h5 class="card-title">Total du panier:
								{{total|number_format(2, ',', ' ')}} â‚¬</h5>
							<a class="btn btn-success mt-3 mx-2" href="{{path('order_new') }}">
								<i class="bi bi-cart-check"></i>
								Commander
							</a>
							<a class="btn btn-danger mt-3 mx-2" href="{{path('cart_clear') }}">
								<i class="bi bi-cart-x"></i>
								Vider le panier
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
