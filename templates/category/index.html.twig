{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Liste des catégories{% endblock %}

{% block body %}
	<div class="container content-container">
		<h1 class="text-primary my-5">Liste des catégories</h1>
		<div class="row justify-content-end my-3">
			<div class="col text-end">
				<a class="btn btn-secondary me-0 me-sm-2 mb-2 mb-sm-0" href="{{ path('admin') }}">Retour à l'administration</a>
				<a class="btn btn-success" href="{{ path('category_new') }}">Créer une nouvelle catégorie</a>
			</div>
		</div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Catégorie</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.category }}</td>
                <td>{{ category.slug }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de catégories trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
{% endblock %}
