{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Se connecter
{% endblock %}

{% block body %}
	<div class="container content-container">
		<div class="row justify-content-center my-5">
			<form method="post" class=" col-6">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.username }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}

				<h1 class="h3 mb-3 font-weight-normal text-primary">Se connecter</h1>
				<div class="form-floating mb-3">
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="name@example.com" required autofocus>
				<label for="inputEmail">Email</label>
					{# <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
					<label for="floatingInput">Email address</label> #}
				</div>
				<div class="form-floating mb-3">
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Password" required>
				<label for="inputPassword">Mot de passe</label>
					{# <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
					<label for="floatingPassword">Password</label> #}
				</div>

				<input
				type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				{#
											        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
											        See https://symfony.com/doc/current/security/remember_me.html
											
											        <div class="checkbox mb-3">
											            <label>
											                <input type="checkbox" name="_remember_me"> Remember me
											            </label>
											        </div>
											    #}

				<button class="btn btn-lg btn-primary mb-3" type="submit">
					Se connecter
				</button>
                <p>
                <a href="{{ path('app_forgot_password_request') }}"><small>Mot de passe oubli√© ?</small></a>
                </p>
			</form>
		</div>
	</div>
{% endblock %}
