{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Se connecter
{% endblock %}

{% block body %}
	<div class="container content-container">
		<div class="row justify-content-center my-5">
			<form method="post" class="col-11 col-md-7 border border-3 rounded-3 mt-5">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.username }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}

				<h1 class="h3 mt-3 mb-5 font-weight-normal text-center text-primary title">Se connecter</h1>
				<div class="form-floating mb-3">
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="name@example.com" required>
				<label for="inputEmail">Email</label>
					{# <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
					<label for="floatingInput">Email address</label> #}
				</div>
				<div class="form-floating mb-3">
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Password" required>
				<label for="inputPassword">Mot de passe</label>
					{# <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
					<label for="floatingPassword">Password</label> #}
				</div>

				<input
				type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				{#
											        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
											        See https://symfony.com/doc/current/security/remember_me.html
											
											        <div class="checkbox mb-3">
											            <label>
											                <input type="checkbox" name="_remember_me"> Remember me
											            </label>
											        </div>
											    #}

				<button class="btn btn-lg btn-primary mb-3" type="submit">
					Se connecter
				</button>
                <p>
                <a href="{{ path('app_forgot_password_request') }}"><small>Mot de passe oublié ?</small></a>
                </p>
			</form>
			<div class="col-10 col-md-7 text-center mt-3 mb-5">
				<p>Vous n'avez pas de compte ?</p>
				<a href="{{ path('app_register') }}" class="btn border border-primary border-2 rounded-pill">Créer un compte</a>
			</div>
		</div>
	</div>
{% endblock %}
